<%- include('../layouts/header', { title: 'Cocktail' }) %>

    <header class="py-4">
        <h1 class="text-center">All Cocktails</h1>
    </header>

    <!-- Main content -->
    <main>
        <div class="container">
            <!-- Dropdown for selecting alcohol -->
            <section class="filter-section py-3">
                <label for="alcoholSelect" class="form-label">Filter by Alcohol Type:</label>
                <select class="form-select" id="alcoholSelect" aria-label="Filter by Alcohol Type">
                    <option selected disabled>Select Alcohol</option>
                    <% alcoholTypeData.drinks.forEach(alcohol=> { %>
                        <option value="<%= alcohol.strAlcoholic %>">
                            <%= alcohol.strAlcoholic %>
                        </option>
                        <% }); %>
                </select>
            </section>

            <% if (cocktailData.drinks && cocktailData.drinks.length> 0) { %>
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 py-4">
                    <% cocktailData.drinks.forEach(cocktail=> { %>
                        <div class="col">
                            <div class="card h-100">
                                <img src="<%= cocktail.strDrinkThumb %>" class="card-img-top"
                                    alt="<%= cocktail.strDrink %>" loading="lazy">
                                <div class="card-body d-flex flex-column justify-content-between">
                                    <h2 class="card-title text-center h5 mb-3">
                                        <%= cocktail.strDrink %>
                                    </h2>
                                    <div class="text-center">
                                        <a href="/cocktail/cocktaildetail/<%= cocktail.idDrink %>"
                                            class="btn btn-primary">Discover</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% }); %>
                </div>
                <% } else { %>
                    <p class="text-center">No cocktails found</p>
                    <% } %>
        </div>
    </main>

    <%- include('../layouts/footer') %>